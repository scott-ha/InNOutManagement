<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".MainActivity">

  <TabHost android:id="@+id/tabHost" android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

      <FrameLayout android:id="@android:id/tabcontent" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">

        <!-- 0. LoginView -->
        <LinearLayout android:id="@+id/loginView" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="20dp" android:orientation="vertical">

          <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:gravity="center" android:text="InOutManagement" android:textSize="20sp" android:textColor="@android:color/black"/>

          <EditText android:id="@+id/idEdt" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="id"/>

          <EditText android:id="@+id/passwordEdt" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="password"/>
          
          <EditText android:id="@+id/phonenumberEdt" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="phonenumber"/>

          <Button android:id="@+id/loginBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="로그인"/>

        </LinearLayout>

        <!-- 1. SettingView -->
        <ScrollView android:id="@+id/settingView" android:layout_width="match_parent" android:layout_height="match_parent">

          <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="20dp" android:orientation="vertical">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:gravity="center" android:text="InOutManagement" android:textSize="20sp" android:textColor="@android:color/black"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="[현재 등록된 Home Wi-Fi 목록]" android:textColor="@android:color/black"/>

            <TextView android:id="@+id/homeWifiList" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@android:color/black"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="[Wi-Fi 스캔 목록]" android:textColor="@android:color/black"/>

            <TextView android:id="@+id/scanWifiList" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@android:color/black"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center" android:orientation="vertical">

              <Button android:id="@+id/regHomeWifiBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:text="현재 Wi-Fi를 Home Wi-Fi로 등록"/>

              <Button android:id="@+id/delHomeWifiBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:text="Home Wi-Fi 모두 지우기"/>

              <Button android:id="@+id/finishBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:text="Home Wi-Fi 설정 완료"/>

            </LinearLayout>

          </LinearLayout>
        </ScrollView>

        <!-- 2. WebView -->
        <WebView android:id="@+id/webView" android:layout_width="match_parent" android:layout_height="match_parent"></WebView>

      </FrameLayout>

      <TabWidget android:id="@android:id/tabs" android:layout_width="match_parent" android:layout_height="0dp"/>

    </LinearLayout>

  </TabHost>

</LinearLayout>
